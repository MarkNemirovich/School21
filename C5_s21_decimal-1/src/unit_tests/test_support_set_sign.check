#suite test_set_sign
#test test_set_sign1
  s21_decimal decimal = {{0}};
  // decimal = 0.68985125146545154;

  decimal.bits[0] = 0b00010111001001010100110000000010;
  decimal.bits[1] = 0b00000000111101010001010110011011;
  decimal.bits[2] = 0b00000000000000000000000000000000;
  decimal.bits[3] = 0b00000000000100010000000000000000;

    s21_set_sign(&decimal, 1);
    ck_assert_int_eq(decimal.bits[0], 0b00010111001001010100110000000010);
    ck_assert_int_eq(decimal.bits[1], 0b00000000111101010001010110011011);
    ck_assert_int_eq(decimal.bits[2], 0b00000000000000000000000000000000);
    ck_assert_int_eq(decimal.bits[3], 0b10000000000100010000000000000000);

